@page "/user"

<PageTitle>Usuario</PageTitle>

@using AppUIBlazor.Data
@inject IUser userBL

<h1>Usuario</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>EMail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<UserGetAllDTO>? users;

    protected override async Task OnInitializedAsync()
    {
        users = await userBL.GetAll();
    }
}
